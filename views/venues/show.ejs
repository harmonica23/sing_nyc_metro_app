<%- include('../partials/header') %>

  <div class="main-content">
    <div class="column">
      <h1><%= venue.venueName %></h1>
      <section>
        <h3><%= venue.area %> area</h3>
        <h3><%= venue.address %></h3>
        <h3><%= venue.website %></h3>
        <h3><%= venue.phone %></h3>
        <h3>Karaoke days: <%= venue.when %></h3>
        <h3>Frequency: <%= venue.other %></h3>
        <h3>Venue highlights: <%= venue.highlights %></h3>
      </section>

      <br><br>
      <section id="reviewForm">
        <form id="add-review-form" method="POST" action="/reviews/venues/<%= venue._id %>/reviews">
          <h3>Review this venue:</h3>
          <textarea name="content" class="text-box"></textarea>
          <br>
          <label>Rating:</label>
          <select name="rating">
            <option value="1">No Go</option>
            <option value="2">Fair</option>
            <option value="3">Good</option>
            <option value="4">Great</option>
            <option value="5" selected>Stellar</option>
          </select>
          <br>
          <input type="submit" value="Add Review">
        </form>
    </div>

    <div class="column">
      <h2>Reviews</h2>
      <% if (venue.reviews.length) { %>

        <div class="reviews-container">

          <% let total=0 %>
            <% venue.reviews.forEach(function(r) { %>
              <% total +=r.rating %>

                <div class="review">
                  <div class="review-user">
                    <img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer">
                    <%= r.userName %>
                  </div>
                  <div>Wrote on 
                    <%= r.createdAt.toLocaleDateString() %>:
                  </div>
                  <div>
                    <%= r.content %>
                  </div>
                  <div>Rating: 
                    <%= r.rating %> <br>(1 = No Go, 2 = Fair, 3 = Good, 4 = Great, 5 = Stellar)
                  </div>
                  <br>
                  <div>
                    <% if (user?._id.equals(r.user)) { %>
                      <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                        <button type="submit" id="xButton">x</button>
                      </form>
                      <% } %>
                  </div>
                </div>
                <% }); %>

                  <div class="review-footer">
                    <div colspan="3"></div>
                    <div><strong>Average rating:  
                        <%= (total / venue.reviews.length).toFixed(0) %>/5
                      </strong></div>
                  </div>
        </div>


        <% } else { %>
          <h5>No Reviews Yet</h5>
          <% } %>
            </section>
    </div>
  </div>

  <%- include('../partials/footer') %>